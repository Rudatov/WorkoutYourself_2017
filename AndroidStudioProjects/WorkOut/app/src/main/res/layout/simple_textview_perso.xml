<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/border_cell"

    >

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_name_etape"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="1250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/textView_desc_etape"
        android:layout_below="@+id/textView_name_etape"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="11dp"
        android:id="@+id/textView_temps_etape"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/textView_pause_etape"
        android:layout_alignStart="@+id/textView_pause_etape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="11dp"
        android:id="@+id/textView_pause_etape"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/time_etape_view"
        android:layout_toStartOf="@+id/time_etape_view" />

    <com.example.juju_.workout.TimerView
        android:id="@+id/time_etape_view"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="90dp"
        android:layout_width="90dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Timer(sec) : "
        android:textSize="11dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/time_etape_view"
        android:layout_toLeftOf="@+id/textView_temps_etape"
        android:layout_toStartOf="@+id/textView_temps_etape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="11dp"
        android:text="Pause(sec) : "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView_name_etape"
        android:layout_toRightOf="@+id/textView_name_etape"
        android:layout_toEndOf="@+id/textView_name_etape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GO !"
        android:id="@+id/textView_go"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView_temps_etape"
        android:layout_alignRight="@+id/time_etape_view"
        android:layout_alignEnd="@+id/time_etape_view" />

</RelativeLayout>